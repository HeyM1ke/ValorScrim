<Page x:Class="ValorParty.Menus.JoinMatch.JoinMatch"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ValorParty.Menus.JoinMatch"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="JoinMatch">

    <Grid>
        <Canvas Background="#FF0F1923">
            <Label Content="JOIN A MATCH"  Foreground="White" FontFamily="Bahnschrift" Height="47" Width="232" FontSize="34" Canvas.Top="152" Canvas.Left="284"/>
            <TextBox x:Name="codeInput" Canvas.Left="262" Canvas.Top="199" TextWrapping="Wrap" Width="276" Background="#FFFF4655" Foreground="White" FontFamily="Bahnschrift" SelectionBrush="#FFC3D700" Height="21" TextAlignment="Center"/>
            <Button x:Name="joinMatchBTN" Content="JOIN" Height="50" Width="164" FontFamily="Bahnschrift SemiBold" FontSize="24" Background="#FFFF4655" BorderBrush="#FFF4F4F4" Foreground="#FFF4F4F4" Canvas.Left="318" Canvas.Top="225" Click="joinMatchBTN_Click"/>
            <Button x:Name="backBTN" Content="BACK" Height="30" Width="80" FontFamily="Bahnschrift SemiBold" FontSize="14" Background="#FFFF4655" BorderBrush="#FFF4F4F4" Foreground="#FFF4F4F4" Canvas.Left="10" Canvas.Top="10" Click="backBTN_Click"/>
        </Canvas>
    </Grid>
</Page>
